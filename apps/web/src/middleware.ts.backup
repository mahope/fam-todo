import createMiddleware from 'next-intl/middleware';
import { locales } from './i18n';

export default createMiddleware({
  // En liste over alle understøttede locales
  locales: locales,
  
  // Standard locale bruges når ingen locale matcher
  defaultLocale: 'da',
  
  // Altid brug locale prefix (f.eks. /da/dashboard eller /en/dashboard)
  localePrefix: 'always'
});

export const config = {
  // Match kun internationaliserede pathnames
  matcher: ['/', '/(da|en)/:path*']
};