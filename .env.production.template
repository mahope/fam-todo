# NestList Production Environment Template
# Copy this to .env.production and fill in your actual values

# Database Configuration
POSTGRES_DB=nestlist
POSTGRES_USER=nestlist_user
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://nestlist_user:your_secure_database_password_here@postgres:5432/nestlist

# Application Configuration
NODE_ENV=production
NEXTAUTH_URL=https://todo.holstjensen.eu:8080
NEXTAUTH_SECRET=your_secure_nextauth_secret_at_least_32_characters

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_at_least_32_characters

# Push Notifications (Generate with web-push)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Optional: Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@holstjensen.eu

# Optional: Monitoring
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here