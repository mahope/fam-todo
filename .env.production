# Production Environment Variables for FamTodo
# Copy this file to .env.production.local and fill in the actual values

# Database Configuration
POSTGRES_DB=famtodo_prod
POSTGRES_USER=famtodo_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DATABASE_URL=postgresql://famtodo_user:CHANGE_ME_SECURE_PASSWORD@postgres:5432/famtodo_prod

# Application Configuration
NODE_ENV=production
WEB_PORT=3000
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=CHANGE_ME_SECURE_NEXTAUTH_SECRET_32_CHARS_MINIMUM

# JWT Configuration (shared across all services)
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET_32_CHARS_MINIMUM

# Supabase Configuration
ANON_KEY=your_anon_key_here
SERVICE_ROLE_KEY=your_service_role_key_here
DB_ENCRYPTION_KEY=your_encryption_key_32_chars_minimum
SECRET_KEY_BASE=your_secret_key_base_64_chars_minimum

# Service Ports
POSTGREST_PORT=3001
REALTIME_PORT=4000
STORAGE_PORT=5000
IMGPROXY_PORT=5001

# Push Notifications (VAPID keys)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Email Configuration (optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/certs/privkey.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key